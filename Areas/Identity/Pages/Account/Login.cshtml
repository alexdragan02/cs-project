@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex items-center justify-center">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Log in</h2>
        <form id="account" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>
            
            <div>
                <label asp-for="Input.Email" class="block text-gray-600 mb-1">Email</label>
                <input asp-for="Input.Email" class="w-full p-3 border rounded-lg focus:outline-none focus:ring focus:ring-blue-400" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>
            
            <div>
                <label asp-for="Input.Password" class="block text-gray-600 mb-1">Password</label>
                <input asp-for="Input.Password" type="password" class="w-full p-3 border rounded-lg focus:outline-none focus:ring focus:ring-blue-400" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>
            
            <div class="flex items-center">
                <input class="mr-2" type="checkbox" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="text-gray-600">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>
            
            <button id="login-submit" type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded-lg transition">Log in</button>
            
            <div class="text-center mt-4">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500 hover:underline">Forgot your password?</a>
            </div>
            <div class="text-center">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-500 hover:underline">Register as a new user</a>
            </div>
            <div class="text-center">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-blue-500 hover:underline">Resend email confirmation</a>
            </div>
        </form>


    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
