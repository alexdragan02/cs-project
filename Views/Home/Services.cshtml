@model List<Project.Models.Service>
@{
    ViewData["Title"] = "Servicii";
}

<div class="max-w-7xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Serviciile Noastre</h2>
    <div class="grid md:grid-cols-2 gap-8">
        @foreach (var service in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img 
                    src="@service.Image" 
                    alt="@service.Name"
                    class="w-full h-64 object-cover"
                />
                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-xl font-semibold">@service.Name</h3>
                            <p class="text-gray-600">@service.Duration</p>
                        </div>
                        <p class="text-2xl font-bold text-blue-600">@service.Price Lei</p>
                    </div>
                    <p class="text-gray-600 mb-4">@service.Description</p>
                    <a asp-controller="Appointment" asp-action="Index" asp-route-serviceId="@service.Id"
                       class="block w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition text-center">
                        ProgrameazÄƒ-te
                    </a>
                </div>
            </div>
        }
    </div>
</div>