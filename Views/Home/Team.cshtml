@model List<Project.Models.Barber>
@{
    ViewData["Title"] = "Echipa";
}

<div class="max-w-7xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Echipa Noastră</h2>
    <div class="grid md:grid-cols-3 gap-8">
        @foreach (var barber in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img 
                    src="@barber.Image" 
                    alt="@barber.Name"
                    class="w-full h-80 object-cover"
                />
                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-xl font-semibold">@barber.Name</h3>
                            <p class="text-gray-600">@barber.Experience</p>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-star text-yellow-400"></i>
                            <span class="ml-1 text-gray-600">@barber.Rating</span>
                        </div>
                    </div>
                    <p class="text-gray-600 mb-6">@barber.Bio</p>
                    <div class="space-y-4">
                        <h4 class="font-semibold">Portofoliu</h4>
                        <div class="grid grid-cols-3 gap-2">
                            @foreach (var photo in barber.Portfolio)
                            {
                                <img 
                                    src="@photo"
                                    alt="@barber.Name's work"
                                    class="w-full h-24 object-cover rounded"
                                />
                            }
                        </div>
                    </div>
                    <a asp-controller="Appointment" asp-action="Index" asp-route-barberId="@barber.Id"
                       class="block w-full mt-6 bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition text-center">
                        Programează-te
                    </a>
                </div>
            </div>
        }
    </div>
</div>